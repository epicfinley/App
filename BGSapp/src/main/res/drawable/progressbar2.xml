<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background">
		<shape>
			<gradient
				android:angle="270"
				android:centerColor="@color/bordenyellow"
				android:centerY="0.5"
				android:endColor="@color/bordenyellow"
				android:startColor="@color/bordenyellow" />
		</shape>
	</item>
	<item android:id="@android:id/progress">
		<clip>
			<shape>
				<gradient
					android:angle="0"
					android:endColor="@color/bordenpurple"
					android:startColor="@color/bordenpurple" />
			</shape>
		</clip>
	</item>

</layer-list>