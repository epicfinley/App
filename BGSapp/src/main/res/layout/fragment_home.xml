<ScrollView
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#f7ca18"
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scrollView"
	tools:context=".MainActivity">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="fill_parent"
		android:layout_height="fill_parent"
		xmlns:android="http://schemas.android.com/apk/res/android"
		android:clickable="false"
		>

		<ImageView
			android:layout_width="150dp"
			android:layout_height="150dp"
			android:id="@+id/imageView"
			android:layout_gravity="center_horizontal"
			android:src="@drawable/homelogo"/>

		<com.bordengrammar.bordengrammarapp.FancyTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:text="BGS App"
			android:id="@+id/title"
			android:layout_gravity="center_horizontal"
			android:textColor="#1b094f"
			android:textSize="48dp"
			app:typeface="SANS_LIGHT"/>

		<com.bordengrammar.bordengrammarapp.FancyTextView
			android:id="@+id/info"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="@string/welcomeinfo"
			android:textAppearance="?android:attr/textAppearanceSmall"
			android:textColor="#1b094f"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:textAlignment="center"
			android:gravity="center"
			app:typeface="SANS_REGULAR"/>

		<com.bordengrammar.bordengrammarapp.FancyTextView
			android:id="@+id/wheretitle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_alignParentLeft="true"
			android:layout_alignParentTop="true"
			android:text="@string/where"
			android:textAppearance="?android:attr/textAppearanceLarge"
			android:layout_gravity="center_horizontal"
			android:textColor="#1b094f"
			android:textSize="48dp"
			app:typeface="SANS_LIGHT"/>
		<fragment
			android:id="@+id/map"
			android:layout_width="fill_parent"
			android:layout_height="250dp"
			android:name="com.google.android.gms.maps.SupportMapFragment"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"/>

		<LinearLayout
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="fill_parent"
			android:layout_marginRight="25dp">

			<ImageView
				android:layout_width="60dp"
				android:layout_height="60dp"
				android:id="@+id/imageView2"
				android:src="@drawable/bird"
				android:layout_marginLeft="25dp"
				android:layout_marginTop="25dp"
				android:layout_marginRight="-35dp"
				android:padding="5dp"/>
			<Button
				android:layout_width="wrap_content"
				android:layout_height="70dp"
				android:rotation="270"
				android:layout_marginTop="10.5dp"
				android:background="@drawable/triangle"
				android:layout_marginRight="3dp"/>

			<TableLayout
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="@color/bordenpurple"
				android:layout_marginTop="15dp"
				>

				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

					<com.bordengrammar.bordengrammarapp.FancyTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="this is a tweet.doneeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeeee. WOW it is a big one delibratwely"
						android:id="@+id/tweet"
						android:layout_column="1"
						android:layout_marginTop="5dp"
						android:textColor="@color/bordenyellow"
						android:layout_marginLeft="5dp"
						android:layout_span="1"
						android:layout_weight="1"
						app:typeface="SANS_LIGHT"/>

				</TableRow>

				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

					<com.bordengrammar.bordengrammarapp.FancyTextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:text="bordengrammar | Apr 3 12:40"
						android:id="@+id/date"
						android:layout_column="1"
						android:textColor="@color/bordenyellow"
						android:layout_marginLeft="5dp"
						android:layout_marginTop="5dp"
						android:layout_marginRight="-20dp"
						android:layout_marginBottom="3dp"
						app:typeface="SANS_BOLD"/>

				</TableRow>

				<TableRow
					android:layout_width="fill_parent"
					android:layout_height="fill_parent">

				</TableRow>

			</TableLayout>

		</LinearLayout>

		<com.bordengrammar.bordengrammarapp.FancyTextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="Read previous tweets..."
			android:id="@+id/textView"
			android:textSize="15dp"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="3dp"
			app:typeface="SANS_BOLD"
			android:clickable="true"
			android:onClick="twitactiv"
			android:textIsSelectable="false"
			android:textColor="@color/bordenpurple"
			android:layout_marginTop="3dp"/>
		<View
			android:layout_width="fill_parent"
			android:layout_height="1dp"
			android:background="@color/bordenpurple"
			android:layout_marginRight="25dp"
			android:layout_marginLeft="25dp"
			android:clickable="true"
			android:layout_marginBottom="5dp"
			android:layout_marginTop="5dp"/>

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:textAppearance="?android:attr/textAppearanceMedium"
			android:id="@+id/contacttext"
			android:layout_gravity="center_horizontal"
			android:layout_marginLeft="25dp"
			android:layout_marginRight="25dp"
			android:text="Contact Us"
			android:padding="5dp"/>

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content">

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:layout_height="fill_parent"
				android:weightSum="1"
				android:id="@+id/lincall">
				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:id="@+id/callimage"
					android:layout_marginLeft="25dp"
					android:layout_marginRight="25dp"
					android:src="@drawable/call"
					/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="01795 424192"
					android:id="@+id/calltext"
					android:background="@color/bordenpurple"
					android:clickable="false"
					android:textColor="@color/bordenyellow"
					android:paddingTop="7.5dp"
					android:paddingRight="10dp"
					android:paddingBottom="7.5dp"
					android:paddingLeft="10dp"
					android:layout_marginTop="5dp"/>
			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="fill_parent"
				android:id="@+id/linmail"
				android:layout_height="fill_parent">

				<ImageView
					android:layout_width="50dp"
					android:layout_height="50dp"
					android:id="@+id/mailimage"
					android:layout_marginLeft="25dp"
					android:layout_marginRight="25dp"
					android:src="@drawable/email"/>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textAppearance="?android:attr/textAppearanceMedium"
					android:text="school@bordengrammar.kent.sch.uk"
					android:id="@+id/mailtext"
					android:background="@color/bordenpurple"
					android:clickable="false"
					android:textColor="@color/bordenyellow"
					android:paddingTop="7.5dp"
					android:paddingRight="10dp"
					android:paddingBottom="7.5dp"
					android:paddingLeft="10dp"
					android:layout_marginTop="5dp"/>

			</LinearLayout>
		</LinearLayout>


	</LinearLayout>
</ScrollView>
